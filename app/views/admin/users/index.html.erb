<%provide :title, "Users"%>
	<%n=0%>
	
<div class="tab-content">
	<div role="tabpanel" class="tab-pane active" id="users">
		<table class="table">
		  <thead>
		    <tr>
		      <th>#</th>
		      <th>Name</th>
		      <th>Email</th>
		      <th>Action</th>
		    </tr>
		  </thead>
		  <tbody>
		    <%@users.each do |user|%>
		    <tr>
		    
		      <th scope="row"><%=(n+=1)%></th>
		      <td><%=link_to user.name, user%></td>
		      <td><%=user.email%></td>
		      <td><%=link_to "", admin_user_path(user), method: :delete, class:"glyphicon glyphicon-trash" %></td>
		      
		    </tr>
		    <%end%>
		  </tbody>
		</table>
	</div>
	<div role="tabpanel" class="tab-pane" id="posts">
		<!-- <div class="panel panel-primary">Posts</div> -->
		<h1>Here will be questions</h1>
	</div>
	
</div>
		
	